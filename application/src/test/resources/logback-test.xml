<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %yellow(%date{yyyy-MM-dd HH:mm:ss}) %green(%-5level) %msg %n
            </Pattern>
        </layout>
    </appender>
     
    <root level="warn">
        <appender-ref ref="Console" />
    </root>
 
    <logger name="pl.telech.tmoney" level="trace" additivity="false">
        <appender-ref ref="Console" />
    </logger>
    
    <logger name="org.flywaydb" level="info" additivity="false">
        <appender-ref ref="Console" />
    </logger>
    
    <logger name="com.tngtech.archunit.core.importer.JavaClassProcessor" level="warn" additivyti="false">
    	<appender-ref ref="Console" />
    </logger>
 
</configuration>
